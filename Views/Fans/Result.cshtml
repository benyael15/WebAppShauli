@model IEnumerable<ShauliFinalProject.Models.Fan>

@{
    ViewBag.Title = "Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Fans</h2>
@{if (Model.Count() == 0)
    {
        <div>
            Sorry, No fans found.
        </div>
    }
    else
    {
        <div class="fans">
            @foreach (ShauliFinalProject.Models.Fan currentFan in Model)
            {
                <div class="fan">
                    <div>@currentFan.FirstName @currentFan.LastName</div>
                    <div>@currentFan.Type, Born on <time datetime="2009-06-29T23:35:20+01:00">@currentFan.DateOfBirth</time></div>
                    <div>Seniority level : @currentFan.Seniority</div>
                </div>
            }
        </div>
    }
}